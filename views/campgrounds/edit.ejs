<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="validation-form"
                novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="campground[title]" value="<%=campground.title%>"
                        id="title" required>
                    <div class="valid-feedback">
                        Good to go!!
                    </div>
                    <div class="invalid-feedback">
                        Please add a valid title!!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="campground[location]" id="location"
                        value="<%=campground.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please add a valid location!!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" class="form-control" name="campground[image]" id="image"
                        value="<%=campground.image%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please add a valid image url!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" id="price" name="campground[price]"
                            value="<%=campground.price%>" required>
                        <div class="valid-feedback">
                            Good to go!!
                        </div>
                        <div class="invalid-feedback">
                            Please add a valid amount!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="campground[description]" id="description"
                        required><%=campground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please add some description!!
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <footer>
                <a href="/campgrounds/<%= campground._id %> ">Back to Campgrounds</a>
            </footer>
        </div>
    </div>